# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,ts,jsx,tsx,html,css,scss,sass}]
indent_style = tab
indent_size = 4

[*.{json,yaml}]
indent_size = 2
indent_style = space

[*.md]
max_line_length = off
